@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>


<button @onclick="() => OnCellClick(0, 0)">Test A21</button>

@code {
    private int currentCount = 0;

    protected override void OnInitialized()
    {
        Console.WriteLine("Counter component initialized.");
    }

    private void IncrementCount()
    {
        currentCount++;
        Console.WriteLine("Button clicked. Current count: " + currentCount);
    }

    void OnCellClick(int r, int c)
    {
        Console.WriteLine($"Clicked {r},{c}");
    }
}
